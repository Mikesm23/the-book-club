<div class="full-screen-container-signup">
  <div class="signup-form">
    <div id="createbook-title">
      <h2>Create your Book</h2>
    </div>
    <form class="input-group" action="/create-book" method="POST">
      <label for="title">Title:</label>
      <input type="text" name="title" placeholder="book title" required />

      <label for="author">Author:</label>
      <input type="text" name="author" placeholder="author's name" required />

      <label for="genre">Genre:</label>
      <input
        type="text"
        name="genre"
        placeholder="fantasy/horror/..."
        required
      />

      <label for="bookCover">Picture: </label>
      <input
        type="text"
        name="bookCover"
        placeholder="copy & paste picture URL here"
      />

      <label for="plot">Plot:</label>
      <textarea
        name="plot"
        placeholder="paste plot in here"
        required
      ></textarea>

      <label for="isbn">ISBN:</label>
      <input type="text" name="isbn" placeholder="1234567891234" required />

      <button type="submit" class="form-btn">Create book</button>
    </form>
  </div>
</div>
