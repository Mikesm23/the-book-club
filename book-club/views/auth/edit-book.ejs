<div class="full-screen-container-signup">
  <div class="content-editbook">
    <div class="signup-form">
      <div id="createbook-title">
        <h2>Edit book</h2>
      </div>
      <!-- old class: create-book-form -->
      <form
        action="/edit-book/<%= toUpdateBook._id %>"
        method="POST"
        class="input-group"
      >
        <label for="title">Title:</label>
        <input
          type="text"
          name="title"
          placeholder="<%= toUpdateBook.title %>"
          required
        />

        <br />
        <label for="author">Author:</label>
        <input
          type="text"
          name="author"
          placeholder="<%= toUpdateBook.author %>"
          required
        />

        <br />
        <label for="genre">Genre: </label>
        <input
          type="text"
          name="genre"
          placeholder="<%= toUpdateBook.genre %>"
          required
        />

        <br />
        <label for="bookCover">Picture:</label>
        <input
          type="text"
          name="bookCover"
          placeholder="<%= toUpdateBook.bookCover %>"
        />

        <br />
        <label for="plot">Plot:</label>
        <textarea
          name="plot"
          placeholder="<%= toUpdateBook.plot %>"
          required
        ></textarea>

        <br />
        <label for="isbn">ISBN:</label>
        <input
          type="text"
          name="isbn"
          placeholder="<%= toUpdateBook.isbn %>"
          required
        />

        <button type="submit" class="form-btn">Update Book</button>
      </form>
    </div>
  </div>
</div>
